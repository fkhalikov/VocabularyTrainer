<Window x:Class="VocabularyTrainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VocabularyTrainer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="lblState" Grid.ColumnSpan="2" Foreground="Yellow"></Label>
        <Button x:Name="btnShow" Grid.Column="1" Width="50" Click="btnShow_Click">Show</Button>
        <TextBlock x:Name="txtbBlock" Grid.Row="1" FontSize="55" Foreground="Yellow">tt</TextBlock>
        <TextBox x:Name="txtbTranslation" Background="Black" Grid.Row="1" FontSize="50" Foreground="Yellow" Grid.Column="1"></TextBox>
    </Grid>
</Window>
